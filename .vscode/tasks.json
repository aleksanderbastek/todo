{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build TodoApp in debug configuration",
			"type": "shell",
			"command": "docker-compose -f src/docker-compose.yml -f src/docker-compose.dev.yml build"
		},
		{
			"label": "Run TodoApp in debug configuration",
			"type": "shell",
			"command": "docker-compose -f src/docker-compose.yml -f src/docker-compose.dev.yml up --remove-orphans",
			"dependsOn": ["Build TodoApp in debug configuration"],
			"runOptions": {
				"runOn": "folderOpen"
			},
			"problemMatcher": []
		}
	]
}
